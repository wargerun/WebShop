<div class="container">
    <div class="contacts">
        <div class="contacts-block">
            <h2>Контактная информация</h2>
            <address class="contact-address"><span>Адресс: </span>462781, г Ясный, Оренбургской области, ул. Свердлова д. 5Б</address>
            <div class="contact-phone">
                Телефон:
                <a href="tel:88005553535">+7 (800) 555-35-35 </a>
                (Viber, Whatsapp)
            </div>
            <div class="contact-email">E-mail: automig56@mail.ru</div>
        </div>

        <div id="map" class="yndex-map"></div>
    </div>

    <div class="feedback">
        @using (Html.BeginForm("SendMessage", "Contacts", FormMethod.Post))
        {
            <h2>Связь с нами</h2>
            <div class="feedback-message-row">
                <div class="feedback-title">
                    <span class="mark-requred">*</span>From:
                </div>
                <div class="feedback-input">
                    <input class="input-text" type="email" name="mailSender" placeholder="Enter your email address" />

                    <div class="feedback-error">
                        Please enter your email address.
                    </div>
                </div>
            </div>
            <div class="feedback-message-row">
                <div class="feedback-title">
                    <span class="mark-requred">*</span>Message:
                </div>

                <div class="feedback-input">
                    @*<input class="input-text" type="email" name="message" placeholder="We suggest you detail your product requirements and company information here." />*@

                    <textarea class="input-text" name="message" cols="50" rows="5" placeholder="We suggest you detail your product requirements and company information here." maxlength="4000"></textarea>

                    <div class="feedback-error">
                        Your inquiry content must be between 20 to 4000 characters.
                    </div>
                </div>
            </div>

            <input class="btn" type="submit" value="Send" />
        }
    </div>
</div>

